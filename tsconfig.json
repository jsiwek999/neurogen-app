{
  "compilerOptions": {
    /* Base TS settings */
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "app/components/*"
      ],
      "@/api/*": [
        "app/api/*"
      ],
      "@/lib/*": [
        "lib/*"
      ] // ← fixed
    },
    /* the rest of your existing options … */
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
